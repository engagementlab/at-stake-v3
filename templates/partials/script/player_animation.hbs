$('#overlay').on('show', function(evt, noAnimate) {

	if(noAnimate)
		$('#overlay, #overlay .inner-modal').show();
	else {
		evt.preventDefault();
		evt.stopPropagation();

		innerModalOpenClose($(evt.currentTarget), true, noAnimate);
	}
	
});
$('#overlay').on('hide', function(evt) {
	innerModalOpenClose($(evt.currentTarget), false);
});

