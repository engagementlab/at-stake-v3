		         .fromTo($('.waiting'), .5, { autoAlpha:0, display:'none' }, { autoAlpha:1, display:'block' })
		         .fromTo($('#share_code'), .5, { autoAlpha:0, yPercent: -20, display:'none' }, { autoAlpha:1, yPercent: 0, display:'block' });

